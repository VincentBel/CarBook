    <resources xmlns:android="http://schemas.android.com/apk/res/android">  
      
        <!--<style name="AppBaseTheme" parent="android:Theme"></style>-->
      
        <style name="LoginTheme" parent="android:style/Theme.Holo.Light" >
            <item name="android:selectableItemBackground">@drawable/navigation</item>
        </style>

        <style name="RegisterTheme" parent="android:style/Theme.Holo.Light">
            <item name="android:selectableItemBackground">@drawable/navigation</item>
        </style>

        <style name="dot_style">
            <item name="android:layout_width">5dip</item>
            <item name="android:layout_height">5dip</item>
            <item name="android:background">@drawable/dot_normal</item>
            <item name="android:layout_marginLeft">1.5dip</item>
            <item name="android:layout_marginRight">1.5dip</item>
        </style>


        <style name="AppBaseTheme" parent="Theme.AppCompat">
            <!--
                Theme customizations available in newer API levels can go in
                res/values-vXX/styles.xml, while customizations related to
                backward-compatibility can go here.
            -->
        </style>

        <!-- Application theme. -->
        <style name="AcBar_titleStyle">

            <item name="android:textColor">#FFFFFF</item>
        </style>
        <style name="my_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
            <item name="android:background">@drawable/ab_solid_carbook</item>
            <item name="android:backgroundStacked">@drawable/ab_stacked_solid_carbook</item>
            <item name="android:backgroundSplit">@drawable/ab_bottom_solid_carbook</item>
            <item name="android:progressBarStyle">@style/ProgressBar.Carbook</item>
            <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>

        </style>
        <style name="AppTheme" parent="AppBaseTheme">


            <item name="actionBarWidgetTheme">@android:style/Theme.Holo</item>


            <item name="actionButtonStyle">@android:style/Widget.Holo.ActionButton</item>
            <item name="actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>

            <item name="actionMenuTextColor">?android:attr/textColorPrimaryInverse</item>



            <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
            <item name="android:actionBarItemBackground">@drawable/selectable_background_carbook</item>
            <item name="android:popupMenuStyle">@style/PopupMenu.Carbook</item>
            <item name="android:dropDownListViewStyle">@style/DropDownListView.Carbook</item>
            <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Carbook</item>
            <item name="android:actionDropDownStyle">@style/DropDownNav.Carbook</item>
            <item name="android:actionBarStyle">@style/my_actionbar_style</item>
            <item name="android:actionModeBackground">@drawable/cab_background_top_carbook</item>
            <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_carbook</item>
            <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Carbook</item>

            <!-- Light.DarkActionBar specific -->
            <item name="android:actionBarWidgetTheme">@style/Theme.Carbook.Widget</item>

            <!-- new -->
            <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle.Carbook</item>
            <item name="android:buttonStyle">@style/Button.Carbook</item>
            <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        </style>
</resources>
